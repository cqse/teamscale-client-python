{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "bump",
  "separateMajorMinor": false,
  "extends": [
    "workarounds:all",
    "group:monorepos"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major", 
        "minor"
      ],
      "reviewers": [
        "M8is"
      ]
    }
  ]
}
